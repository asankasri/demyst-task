{
  "name": "demyst-task-server",
  "version": "1.0.0",
  "description": "Server of Demyst Task",
  "main": "server.js",
  "repository": "tbd",
  "author": "Asanka Piyasekara <asankasri@gmail.com>",
  "license": "MIT",
  "scripts": {
    "postinstall": "npx tsc",
    "dev": "ts-node-dev --poll src/server.ts",
    "build": "tsc",
    "start": "npm run serve",
    "serve": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage --verbose",
    "lint": "tsc --noEmit && eslint 'src/**/*.{js,ts,tsx}' --quiet --fix --ignore-pattern 'dist/'",
    "prettier:base": "prettier",
    "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\""
  },
  "pre-commit": {
    "run": [
      "test"
    ]
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "npm run prettier:write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "helmet": "^4.2.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.8",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.8",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^26.0.15",
    "@types/multer": "^1.4.4",
    "@types/node": "^14.14.6",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-when": "^3.5.2",
    "lint-staged": "^10.5.1",
    "pre-commit": "^1.2.2",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.3",
    "ts-node-dev": "^2.0.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.0.5"
  }
}
